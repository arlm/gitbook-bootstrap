{
    "author": "Author Name",
    "variables": {
        "authors": [
            { "name": "Author 1" },
            { "name": "Author 2" }
        ],
        "year": "2016"
    },
    "pdf": {
        "toc": true,
        "pageNumbers": false,
        "fontSize": 8,
        "paperSize": "a4",
        "margin": {
            "right": 69,
            "left": 69,
            "top": 36,
            "bottom": 36
        },
        "headerTemplate": "_TITLE_",
        "footerTemplate": "<span style='float: left'>Copyright _AUTHOR_</span> <span style='float: right'>_PAGENUM_</span>"
    },
    "plugins": [
        "autocover",
        "language-picker",
        "exercises",
        "youtube",
        "bibtex-cite",
        "callouts"
    ],
    "pluginsConfig": {
        "language-picker": {
            "grid-columns": 3
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": true,
            "vk": false,
            "all": "facebook,google,twitter,weibo,instapaper"
        },
        "autocover": {
            "font": {
                "size": null,
                "family": "Impact",
                "color": "#FFF"
            },
            "size": {
                "w": 1800,
                "h": 2360
            },
            "background": {
                "color": "#09F"
            }
        },
        "callouts": {
            "note": {
                "alert": "primary",
                "picto": "fa-edit"
            },
            "info": {
                "alert": "info",
                "picto": "fa-info"
            },
            "tag": {
                "alert": "info",
                "picto": "fa-tag"
            },
            "comment": {
                "alert": "info",
                "picto": "fa-comment-o"
            },
            "hint": {
                "alert": "success",
                "picto": "fa-lightbulb-o"
            },
            "success": {
                "alert": "success",
                "picto": "fa-lightbulb-o"
            },
            "warning": {
                "alert": "warning",
                "picto": "fa-exclamation-triangle"
            },
            "caution": {
                "alert": "warning",
                "picto": "fa-exclamation-triangle"
            },
            "todo": {
                "alert": "warning",
                "picto": "fa-bookmark"
            },
            "danger": {
                "alert": "danger",
                "picto": "fa-times-circle"
            },
            "fixme": {
                "alert": "danger",
                "picto": "fa-bug"
            },
            "bug": {
                "alert": "danger",
                "picto": "fa-bug"
            },
            "quote": {
                "alert": "quote",
                "picto": "fa-quote-left"
            },
            "tip": {
                "alert": "info",
                "picto": "fa-lightbulb-o"
            },
            "star": {
                "alert": "info",
                "picto": "fa-star"
            }
        }
    }
}
